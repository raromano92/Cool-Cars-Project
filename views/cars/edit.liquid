{% layout "layout.liquid" %} {% block content %}

  <form id="update-form" action="/cars/{{ data._id }}?_method=PUT" method="POST">
    <fieldset>
      <legend class="editor-legend">Update Your Ride!</legend>
      
      <label>Year:<input id="txt-box" type="text" name="Year" placeholder="{{ data.Year }}" value=""/></label>
      <label> Make:<input id="txt-box" type="text" name="Make" placeholder="{{ data.Make }}" value=""/></label>
        <label> Model:<input id="txt-box" type="text" name="Model" placeholder="{{ data.Model }}" value=""/></label>
            <label> Color:<input id="txt-box" type="text" name="Color" placeholder="{{ data.Color }}" value=""/></label>
                <label>Price:<input id="txt-box" type="text" name="Price" placeholder="{{ data.Price }}" value=""/></label>
                    <label>Img:<input id="txt-box" type="text" name="Img" placeholder="{{ data.Img }}" value=""/></label>
     
    </fieldset>

    <input type="submit" id="edit-btn" value="Confirm" />
  </form>

{% endblock %}